<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Animated Background Circles -->
    <View
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="top|start"
        android:layout_marginStart="-100dp"
        android:layout_marginTop="-100dp"
        android:background="@drawable/circle_blur"
        android:alpha="0.3"/>

    <View
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="-80dp"
        android:layout_marginBottom="-80dp"
        android:background="@drawable/circle_blur"
        android:alpha="0.3"/>

    <!-- Main Content (NO CARD) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:paddingTop="60dp">

            <!-- App Logo/Icon -->
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="50dp"
                app:cardElevation="8dp"
                android:backgroundTint="#000000"
                android:layout_marginBottom="32dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_logo"
                    app:tint="#FFFFFF"/>
            </androidx.cardview.widget.CardView>

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome Back"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.02"/>

            <!-- Subtitle -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="40dp"
                android:text="Sign in to track your fitness journey"
                android:textSize="15sp"
                android:textColor="#B3FFFFFF"
                android:gravity="center"/>

            <!-- Email Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="#1E4ED8"
                app:hintTextColor="#B3FFFFFF"
                app:boxCornerRadiusTopStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusBottomEnd="16dp"
                app:startIconDrawable="@drawable/ic_email"
                app:startIconTint="#B3FFFFFF">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ipEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#80FFFFFF"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Password Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Password"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="#1E4ED8"
                app:hintTextColor="#B3FFFFFF"
                app:boxCornerRadiusTopStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusBottomEnd="16dp"
                app:startIconDrawable="@drawable/ic_lock"
                app:startIconTint="#B3FFFFFF"
                app:endIconMode="password_toggle"
                app:endIconTint="#B3FFFFFF">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ipPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#80FFFFFF"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Forgot Password -->
            <TextView
                android:id="@+id/tvForgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="12dp"
                android:text="Forgot Password?"
                android:textColor="#1E4ED8"
                android:textSize="14sp"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"/>

            <!-- Sign In Button -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btnSignIn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="32dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="8dp"
                android:backgroundTint="#1E4ED8"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- âœ… LOADING PROGRESS BAR (HIDDEN BY DEFAULT) -->
                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:indeterminateTint="#FFFFFF"
                        android:visibility="gone"
                        style="@android:style/Widget.ProgressBar.Small"/>

                    <!-- SIGN IN TEXT -->
                    <TextView
                        android:id="@+id/tvSignInText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SIGN IN"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:letterSpacing="0.1"/>

                    <ImageView
                        android:id="@+id/ivArrow"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_right"
                        app:tint="#FFFFFF"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Divider -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#30FFFFFF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  OR  "
                    android:textColor="#80FFFFFF"
                    android:textSize="12sp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#30FFFFFF"/>
            </LinearLayout>

            <!-- Sign Up Link -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Don't have an account? "
                    android:textColor="#B3FFFFFF"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/btnCreateAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign Up"
                    android:textColor="#1E4ED8"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>