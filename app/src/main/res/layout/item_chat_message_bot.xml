<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="16dp"
    android:paddingStart="8dp"
    android:paddingEnd="60dp"
    android:gravity="start">

    <!-- Bot Avatar -->
    <androidx.cardview.widget.CardView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="4dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="3dp"
        android:backgroundTint="#1E4ED8">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_robot"
            app:tint="#FFFFFF"/>
    </androidx.cardview.widget.CardView>

    <!-- Message Content - NOW DYNAMIC -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Bot Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI Coach"
            android:textSize="11sp"
            android:textColor="#B3FFFFFF"
            android:textStyle="bold"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="4dp"/>

        <!-- Message Bubble - NOW DYNAMIC -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            android:backgroundTint="#30FFFFFF">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp"
                android:paddingStart="18dp"
                android:paddingEnd="18dp">

                <TextView
                    android:id="@+id/tvBotMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello! How can I help you with your fitness journey today? ðŸ’ª"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:lineSpacingExtra="2dp"
                    android:maxWidth="280dp"
                    android:breakStrategy="balanced"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Timestamp -->
        <TextView
            android:id="@+id/tvBotTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Just now"
            android:textSize="10sp"
            android:textColor="#60FFFFFF"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"/>

    </LinearLayout>

</LinearLayout>