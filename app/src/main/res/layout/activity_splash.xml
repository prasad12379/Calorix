<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Animated Background Circles -->
    <View
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_gravity="top|start"
        android:layout_marginStart="-150dp"
        android:layout_marginTop="-150dp"
        android:background="@drawable/circle_blur"
        android:alpha="0.2"/>

    <View
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="-120dp"
        android:layout_marginBottom="-120dp"
        android:background="@drawable/circle_blur"
        android:alpha="0.2"/>

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="40dp">

        <!-- App Logo with Glow Effect -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <!-- Outer Glow Ring -->
            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="180dp"
                app:cardCornerRadius="90dp"
                app:cardElevation="0dp"
                android:backgroundTint="#204CAF50"
                android:layout_gravity="center"
                android:alpha="0.6"/>

            <!-- Middle Ring -->
            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="160dp"
                app:cardCornerRadius="80dp"
                app:cardElevation="0dp"
                android:backgroundTint="#000000"
                android:layout_gravity="center"
                android:alpha="0.8"/>

            <!-- Logo Circle -->
            <androidx.cardview.widget.CardView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                app:cardCornerRadius="70dp"
                app:cardElevation="12dp"
                android:backgroundTint="#000000">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_logo"
                    app:tint="#FFFFFF"/>
            </androidx.cardview.widget.CardView>

        </FrameLayout>

        <!-- App Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CaloriX"
            android:textSize="48sp"
            android:textStyle="bold"
            android:textColor="#22D3EE"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.05"
            android:layout_marginBottom="8dp"/>

        <!-- Tagline -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Track Your Fitness Journey"
            android:textSize="16sp"
            android:textColor="#B3FFFFFF"
            android:fontFamily="sans-serif"
            android:letterSpacing="0.1"
            android:layout_marginBottom="40dp"/>

        <!-- Lottie Running Animation -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieAnimation"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/running_animation"/>



        <!-- Welcome Message -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:alpha="0.9">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to"
                android:textSize="18sp"
                android:textColor="#CCFFFFFF"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Personal Fitness Companion"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:layout_marginBottom="32dp"/>

        </LinearLayout>

        <!-- Loading Indicator -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <ProgressBar
                android:layout_width="24dp"
                android:layout_height="27dp"
                android:indeterminateTint="#1E4ED8"
                style="@android:style/Widget.ProgressBar.Small"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Loading..."
                android:textSize="14sp"
                android:textColor="#80FFFFFF"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Version Info (Optional) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v1.0.0"
        android:textSize="12sp"
        android:textColor="#60FFFFFF"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="20dp"/>

</FrameLayout>