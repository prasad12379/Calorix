<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Animated Background Circles -->
    <View
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:background="@drawable/circle_blur"
        android:alpha="0.2"/>

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="40dp">

        <!-- Workout Mode Title -->
        <TextView
            android:id="@+id/tvCountdownMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RUNNING"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1E4ED8"
            android:letterSpacing="0.15"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Ready"
            android:textSize="20sp"
            android:textColor="#B3FFFFFF"
            android:layout_marginBottom="60dp"/>

        <!-- Countdown Circle -->
        <androidx.cardview.widget.CardView
            android:layout_width="280dp"
            android:layout_height="280dp"
            app:cardCornerRadius="140dp"
            app:cardElevation="20dp"
            android:backgroundTint="#204CAF50">

            <androidx.cardview.widget.CardView
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:layout_gravity="center"
                app:cardCornerRadius="120dp"
                app:cardElevation="0dp"
                android:backgroundTint="#304CAF50">

                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="100dp"
                    app:cardElevation="0dp"
                    android:backgroundTint="#15FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <!-- Countdown Number -->
                        <TextView
                            android:id="@+id/tvCountdown"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:textSize="100sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:fontFamily="sans-serif-condensed"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <!-- Starting Message -->
        <TextView
            android:id="@+id/tvCountdownMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Starting in"
            android:textSize="18sp"
            android:textColor="#CCFFFFFF"
            android:layout_marginTop="60dp"/>

        <!-- Cancel Button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btnCancelCountdown"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="8dp"
            android:backgroundTint="#50FFFFFF"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingStart="32dp"
                android:paddingEnd="32dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_delete"
                    app:tint="#FFFFFF"
                    android:layout_marginEnd="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CANCEL"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:letterSpacing="0.1"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</FrameLayout>