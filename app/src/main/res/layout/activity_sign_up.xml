<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Animated Background Circles -->
    <View
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="top|end"
        android:layout_marginEnd="-100dp"
        android:layout_marginTop="-100dp"
        android:background="@drawable/circle_blur"
        android:alpha="0.3"/>

    <View
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="-80dp"
        android:layout_marginBottom="-80dp"
        android:background="@drawable/circle_blur"
        android:alpha="0.3"/>

    <!-- Main Content (NO CARD) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:paddingTop="40dp"
            android:paddingBottom="40dp">

            <!-- App Logo/Icon -->
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="50dp"
                app:cardElevation="8dp"
                android:backgroundTint="#000000"
                android:layout_marginBottom="32dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_logo"
                    app:tint="#FFFFFF"/>
            </androidx.cardview.widget.CardView>

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Account"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.02"/>

            <!-- Subtitle -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="32dp"
                android:text="Start your fitness journey today"
                android:textSize="15sp"
                android:textColor="#B3FFFFFF"
                android:gravity="center"/>

            <!-- Account Information Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Account Information"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#1E4ED8"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="4dp"/>

            <!-- Full Name Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Full Name"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="#1E4ED8"
                app:hintTextColor="#B3FFFFFF"
                app:boxCornerRadiusTopStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusBottomEnd="16dp"
                app:startIconDrawable="@drawable/ic_profile"
                app:startIconTint="#B3FFFFFF">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ipUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#80FFFFFF"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Email Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:hint="Email"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="#1E4ED8"
                app:hintTextColor="#B3FFFFFF"
                app:boxCornerRadiusTopStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusBottomEnd="16dp"
                app:startIconDrawable="@drawable/ic_email"
                app:startIconTint="#B3FFFFFF">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ipEmailR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#80FFFFFF"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Password Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:hint="Password"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="#1E4ED8"
                app:hintTextColor="#B3FFFFFF"
                app:boxCornerRadiusTopStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusBottomEnd="16dp"
                app:startIconDrawable="@drawable/ic_lock"
                app:startIconTint="#B3FFFFFF"
                app:endIconMode="password_toggle"
                app:endIconTint="#B3FFFFFF">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ipPasswordR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#80FFFFFF"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Personal Information Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Personal Information"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#1E4ED8"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="4dp"/>

            <!-- Age and Gender Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- Age Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:hint="Age"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="#1E4ED8"
                    app:hintTextColor="#B3FFFFFF"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:startIconDrawable="@drawable/ic_age"
                    app:startIconTint="#B3FFFFFF"
                    app:suffixText="yrs"
                    app:suffixTextColor="#B3FFFFFF">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ipAge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#80FFFFFF"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Gender Dropdown -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Gender"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    app:boxStrokeColor="#1E4ED8"
                    app:hintTextColor="#B3FFFFFF"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:startIconDrawable="@drawable/ic_gender"
                    app:startIconTint="#B3FFFFFF">

                    <AutoCompleteTextView
                        android:id="@+id/ipGender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#80FFFFFF"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <!-- Height and Weight Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="14dp"
                android:weightSum="2">

                <!-- Height Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:hint="Height"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="#1E4ED8"
                    app:hintTextColor="#B3FFFFFF"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:startIconDrawable="@drawable/ic_height"
                    app:startIconTint="#B3FFFFFF"
                    app:suffixText="cm"
                    app:suffixTextColor="#B3FFFFFF">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ipHeight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#80FFFFFF"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Weight Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Weight"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="#1E4ED8"
                    app:hintTextColor="#B3FFFFFF"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:startIconDrawable="@drawable/ic_weight"
                    app:startIconTint="#B3FFFFFF"
                    app:suffixText="kg"
                    app:suffixTextColor="#B3FFFFFF">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ipWeight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#80FFFFFF"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <!-- Fitness Goal -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:hint="Fitness Goal"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                app:boxStrokeColor="#1E4ED8"
                app:hintTextColor="#B3FFFFFF"
                app:boxCornerRadiusTopStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusBottomEnd="16dp"
                app:startIconDrawable="@drawable/ic_target"
                app:startIconTint="#B3FFFFFF">

                <AutoCompleteTextView
                    android:id="@+id/ipGoal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#80FFFFFF"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Terms & Conditions -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp">

                <CheckBox
                    android:id="@+id/cbTerms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#1E4ED8"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="I agree to Terms &amp; Conditions"
                    android:textColor="#B3FFFFFF"
                    android:textSize="13sp"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>

            <!-- Sign Up Button -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btnSignUpR"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="8dp"
                android:backgroundTint="#1E4ED8"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- âœ… LOADING PROGRESS BAR (HIDDEN BY DEFAULT) -->
                    <ProgressBar
                        android:id="@+id/progressBarSignup"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:indeterminateTint="#FFFFFF"
                        android:visibility="gone"
                        style="@android:style/Widget.ProgressBar.Small"/>

                    <!-- SIGN UP TEXT -->
                    <TextView
                        android:id="@+id/tvSignUpText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CREATE ACCOUNT"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:letterSpacing="0.1"/>

                    <ImageView
                        android:id="@+id/ivArrowSignup"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_right"
                        app:tint="#FFFFFF"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Divider -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="20dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#30FFFFFF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  OR  "
                    android:textColor="#80FFFFFF"
                    android:textSize="12sp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#30FFFFFF"/>
            </LinearLayout>

            <!-- Sign In Link -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already have an account? "
                    android:textColor="#B3FFFFFF"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/btnGoToSignIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign In"
                    android:textColor="#1E4ED8"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>